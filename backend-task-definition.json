{
  "family": "task-manager-backend",
  "networkMode": "awsvpc",
  "requiresCompatibilities": ["FARGATE"],
  "cpu": "256",
  "memory": "512",
  "executionRoleArn": "arn:aws:iam::180706483735:role/ecsTaskExecutionRole",
  "containerDefinitions": [
    {
      "name": "backend",
      "image": "180706483735.dkr.ecr.us-east-2.amazonaws.com/backend:v2",
      "essential": true,
      "portMappings": [
        {
          "containerPort": 3000,
          "protocol": "tcp"
        }
      ],
      "environment": [
        {
          "name": "DB_HOST",
          "value": "taskmanager.c12asgs6sitb.us-east-2.rds.amazonaws.com"
        },
        {
          "name": "DB_USER",
          "value": "taskuser"
        },
        {
          "name": "DB_PASSWORD",
          "value": "taskpassword135$"
        },
        {
          "name": "DB_NAME",
          "value": "taskmanager"
        },
        {
          "name": "DB_PORT",
          "value": "3306"
        }
      ],
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/task-manager-backend",
          "awslogs-region": "us-east-2",
          "awslogs-stream-prefix": "ecs"
        }
      }
    }
  ]
}
